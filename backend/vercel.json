{
    "version": 2,
    "buildCommand": "npm run build",
    "devCommand": "npm run dev",
    "installCommand": "npm install",
    "builds": [
        {
            "src": "backend/dist/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "backend/dist/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "backend/dist/index.js"
        }
    ]
}